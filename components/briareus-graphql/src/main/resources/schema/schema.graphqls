type BlogPost {
  id: String!
  title: String!
  content: String
  tags: [String!]
  createdAt: Date
  updatedAt: Date
}

input BlogPostInput {
  content: String
  tags: [String!]
}

type BlogQueries {
  listBlogPosts: [BlogPost]
  locateBlogPost(id: ID!): BlogPost
}

type BlogMutations {
  createBlogPost(title: String!, input: BlogPostInput): QueryResult
}

extend type Query {
  blogQueries: BlogQueries!
}

extend type Mutation {
  blogMutations: BlogMutations!
}
